# ===========================================
# EMSA Gestion de Turnos - Backend
# Configuracion de Entorno
# ===========================================

# Aplicacion
APP_NAME=EMSA Gestion de Turnos
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# ===========================================
# Base de Datos PostgreSQL
# ===========================================

# --- OPCION 1: Desarrollo Local (con Cloud SQL Proxy) ---
# Ejecutar primero: cloud-sql-proxy.exe emsa-gestion-turnos:southamerica-east1:emsa-gestion-turnos-db --port=5432
DATABASE_URL=postgresql://app_user:TU_PASSWORD@localhost:5432/emsa_gestion_turnos

# --- OPCION 2: Cloud Run (produccion) ---
# El formato usa Unix socket para conectar via Cloud SQL Proxy integrado
# DATABASE_URL=postgresql://app_user:TU_PASSWORD@/emsa_gestion_turnos?host=/cloudsql/emsa-gestion-turnos:southamerica-east1:emsa-gestion-turnos-db

# Variables individuales (alternativas)
DB_USER=app_user
DB_PASSWORD=TU_PASSWORD
DB_NAME=emsa_gestion_turnos

# Cloud SQL Instance (usado en Cloud Run)
# INSTANCE_CONNECTION_NAME=emsa-gestion-turnos:southamerica-east1:emsa-gestion-turnos-db

# ===========================================
# JWT
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# API
# ===========================================
API_V1_PREFIX=/api/v1
